<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/White"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textMRName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/White"
                    android:gravity="left"
                    android:paddingLeft="6dp"
                    android:text="@string/mrname"
                    android:textColor="@color/Red"
                    android:textSize="18sp"
                    android:typeface="serif" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/White"
                    android:gravity="right"
                    android:paddingLeft="5dp"
                    android:text="@string/section"
                    android:textColor="@color/Red"
                    android:textSize="18sp"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/txtsiteNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:background="@color/White"
                    android:gravity="left"
                    android:text=""
                    android:textColor="@color/Red"
                    android:textSize="18sp"
                    android:typeface="serif" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/border_light_gray_inside"
                android:gravity="center"
                android:orientation="horizontal" >

                <TableLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_weight="1" >

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center|left" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left|center"
                            android:text="@string/dashboard"
                            android:textColor="@color/blue_rem"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:typeface="serif" />
                    </TableRow>

                    <TableRow
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:gravity="center|left" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="left|center"
                            android:text="@string/total"
                            android:textColor="@color/blue_rem"
                            android:textSize="20sp"
                            android:typeface="serif" />

                        <TextView
                            android:id="@+id/disptotal_con"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:gravity="left|center"
                            android:text="10"
                            android:textColor="@color/Black"
                            android:textSize="22sp"
                            android:typeface="serif" />
                    </TableRow>

                    <TableRow
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:gravity="center|left" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="left|center"
                            android:text="@string/billed"
                            android:textColor="@color/blue_rem"
                            android:textSize="20sp"
                            android:typeface="serif" />

                        <TextView
                            android:id="@+id/dispBilled"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:gravity="left|center"
                            android:text="2"
                            android:textColor="@color/Orange"
                            android:textSize="22sp"
                            android:typeface="serif" />
                    </TableRow>

                    <TableRow
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:gravity="center|left" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="left|center"
                            android:text="@string/sync"
                            android:textColor="@color/blue_rem"
                            android:textSize="20sp"
                            android:typeface="serif" />

                        <TextView
                            android:id="@+id/txtsynched"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:gravity="left|center"
                            android:text="1"
                            android:textColor="@color/Green"
                            android:textSize="22sp"
                            android:typeface="serif" />
                    </TableRow>

                    <TableRow
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:gravity="center|left" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="left|center"
                            android:text="@string/notsync"
                            android:textColor="@color/blue_rem"
                            android:textSize="20sp"
                            android:typeface="serif" />

                        <TextView
                            android:id="@+id/txtnotsynched"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:gravity="left|center"
                            android:text="1"
                            android:textColor="@color/Red"
                            android:textSize="22sp"
                            android:typeface="serif" />
                    </TableRow>
                </TableLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/txtAmount"
                        style="@style/btnJvnnlBlue"
                        android:layout_width="65dp"
                        android:layout_height="60dp"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/bill_new"
                        android:textSize="18sp"
                        android:visibility="visible" />

                    <Button
                        android:id="@+id/btnnxt"
                        style="@style/btn_stand_for_homepage"
                        android:layout_width="125dp"
                        android:layout_height="55dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="5dp"
                        android:text="@string/goforbilling"
                        android:textColor="@color/blue_rem"
                        android:textSize="25sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearBackImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="14dp"
                android:background="@drawable/white_transparent"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="2dp"
                    android:baselineAligned="false"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/btn_download"
                        style="@style/btn_stand_for_homepage"
                        android:layout_width="fill_parent"
                        android:layout_height="55dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="1" >

                        <TextView
                            style="@style/textShadow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.42"
                            android:gravity="left"
                            android:text="Download"
                            android:textColor="@color/DarkGray"
                            android:textSize="20sp" />

                        <ImageButton
                            android:id="@+id/previousbill_dwn"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/down_icon" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_upload"
                        style="@style/btn_stand_for_homepage"
                        android:layout_width="fill_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="8dp"
                        android:clickable="true"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="1" >

                        <TextView
                            style="@style/textShadow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.55"
                            android:gravity="left"
                            android:text="Upload"
                            android:textColor="@color/DarkGray"
                            android:textSize="20sp" />

                        <ImageButton
                            android:id="@+id/imgBtnNotification"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:background="@drawable/up_" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_tariffupdate"
                        style="@style/btn_stand_for_homepage"
                        android:layout_width="fill_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="1" >

                        <TextView
                            style="@style/textShadow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.20"
                            android:gravity="left"
                            android:text="Tariff Update"
                            android:textColor="@color/DarkGray"
                            android:textSize="20sp" />

                        <ImageButton
                            android:id="@+id/imgBtnPayHistory"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/tariff_logo_2" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_reports"
                        style="@style/btn_stand_for_homepage"
                        android:layout_width="fill_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="1" >

                        <TextView
                            style="@style/textShadow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight=".46"
                            android:gravity="left"
                            android:text="@string/report"
                            android:textColor="@color/DarkGray"
                            android:textSize="20sp" />

                        <ImageButton
                            android:id="@+id/imgBtn_report"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/report_view" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_settings"
                        style="@style/btn_stand_for_homepage"
                        android:layout_width="fill_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="1" >

                        <TextView
                            style="@style/textShadow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight=".46"
                            android:gravity="left"
                            android:text="Settings"
                            android:textColor="@color/DarkGray"
                            android:textSize="20sp" />

                        <ImageButton
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/settings" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:background="@drawable/white_transparent"
                android:orientation="vertical" >

                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:stretchColumns="1" >

                    <TableRow>

                        <TextView
                            android:id="@+id/totalspace"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:text="@string/totalspace" >
                        </TextView>

                        <TextView
                            android:id="@+id/totalspacevalue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" : 2.00gb" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:id="@+id/availablespace"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/availablespace" >
                        </TextView>

                        <TextView
                            android:id="@+id/availablespacevalue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" : 1.2gb" >
                        </TextView>
                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/LightGrey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/WhiteSmoke"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="5dp"
                android:src="@drawable/bcits_powered" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/LightGrey" />
    </LinearLayout>

</ScrollView>