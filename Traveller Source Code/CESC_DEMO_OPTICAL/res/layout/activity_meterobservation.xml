<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="1dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/previousmeterstatus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:gravity="top"
                    android:text="@string/PreviousMeterStatus"
                    android:textStyle="bold" >
                </TextView>

                <TextView
                    android:id="@+id/previousmeterstatusval"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:text="TextView"
                    android:textColor="@color/Red"
                    android:textSize="18sp"
                    android:textStyle="bold" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/border"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/presentstatus"
                    android:textStyle="bold" >
                </TextView>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:gravity="center" >

                    <Spinner
                        android:id="@+id/presentmeterstatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/meter_status"
                        android:visibility="visible" >
                    </Spinner>

                    <TextView
                        android:id="@+id/presentmeterstatus1"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="presentstatus"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:visibility="invisible" >
                    </TextView>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/phonenumberlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/border"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Phone Number    "
                    android:textStyle="bold" >
                </TextView>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:gravity="center" >

                    <EditText
                        android:id="@+id/phonenumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLength="10"
                        android:visibility="visible" >
                    </EditText>
                </RelativeLayout>
            </LinearLayout>

            <CheckBox
                android:id="@+id/checkBox1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:checked="false"
                android:text="Phone Number Not Available"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/border_light_gray_inside"
                android:orientation="vertical" >

                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="1dp"
                    android:padding="1dp"
                    android:stretchColumns="0" >

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="35dip"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="@string/consu_details"
                            android:textColor="@color/blue_rem"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:typeface="serif" />
                    </TableRow>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="2dp"
                        android:layout_marginBottom="2dip"
                        android:background="@color/blue_rem" />

                    <TableRow
                        android:id="@+id/tableRow2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dip"
                        android:gravity="center_vertical" >

                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/rrno"
                            android:textColor="@color/androidBlue3"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="32dp"
                            android:background="@color/Gray" />

                        <TextView
                            android:id="@+id/txtrr_no"
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="TextView"
                            android:textColor="@color/Black"
                            android:textStyle="bold" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dip"
                        android:gravity="center_vertical" >

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/consuname"
                            android:textColor="@color/androidBlue3"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="32dp"
                            android:background="@color/Gray" />

                        <TextView
                            android:id="@+id/txtCons_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="TextView"
                            android:textColor="@color/Black"
                            android:textStyle="bold" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dip"
                        android:gravity="center_vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/address"
                            android:textColor="@color/androidBlue3"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="32dp"
                            android:background="@color/Gray" />

                        <TextView
                            android:id="@+id/txt_address"
                            android:layout_width="150dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:maxLines="4"
                            android:singleLine="false"
                            android:text="TextView"
                            android:textColor="@color/Black"
                            android:textStyle="bold" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dip"
                        android:gravity="center_vertical" >

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tariff"
                            android:textColor="@color/androidBlue3"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="32dp"
                            android:background="@color/Gray" />

                        <TextView
                            android:id="@+id/txt_tariff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="TextView"
                            android:textColor="@color/Black"
                            android:textStyle="bold" />
                    </TableRow>
                </TableLayout>
            </LinearLayout>

            <Button
                android:id="@+id/buttonnext"
                style="@style/btn_stand_for_homepage"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:text="Photo Billing"
                android:textAlignment="center"
                android:textColor="@color/blue_rem"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnThroughRF"
                style="@style/btn_stand_for_homepage"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:text="RF Billing"
                android:textAlignment="center"
                android:textColor="@color/blue_rem"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnDlmsOptical"
                style="@style/btn_stand_for_homepage"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:text="DLMS OPTICAL"
                android:textAlignment="center"
                android:textColor="@color/blue_rem"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnBluetooth"
                style="@style/btn_stand_for_homepage"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:text="Bluetooth Billing"
                android:textAlignment="center"
                android:textColor="@color/blue_rem"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/inv"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginTop="50dip"
                android:background="@drawable/border_light_gray"
                android:clickable="false"
                android:text="Search"
                android:textColor="@color/blue_rem"
                android:textSize="22sp"
                android:visibility="invisible" >
            </Button>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/LightGrey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/WhiteSmoke"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="5dp"
                android:src="@drawable/bcits_powered" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>