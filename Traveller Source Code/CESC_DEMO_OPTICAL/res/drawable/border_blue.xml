<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <stroke android:width="1px" android:color="@color/WhiteSmoke" />

            <gradient android:angle="45" android:centerColor="@color/Blue" android:endColor="@color/Blue" android:startColor="@color/Blue" android:type="linear" />

            <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp" />

            <corners android:radius="2dp" />
        </shape></item>
    <item><shape>
            <stroke android:width="1px" android:color="@color/WhiteSmoke" />

            <gradient android:angle="45" android:centerColor="@color/blue_rem" android:endColor="@color/Blue" android:startColor="@color/Blue" android:type="linear" />

            <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp" />

            <corners android:radius="2dp" />
        </shape></item>

</selector>