<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <corners android:radius="30dip" />

            <padding android:bottom="5dp" android:right="15dp" android:top="5dp" />

            <stroke android:width="1dip" android:color="@color/blue_rem" />

            <solid android:color="@color/blue_rem" />
        </shape></item>
    <item android:state_checked="true"><shape android:shape="rectangle">
            <corners android:radius="30dip" />

            <padding android:bottom="5dp" android:right="15dp" android:top="5dp" />

            <stroke android:width="1dip" android:color="@color/blue_rem" />

            <solid android:color="@color/LightBlue" />
        </shape></item>
    <item><shape android:shape="rectangle">
            <corners android:radius="30dip" />

            <padding android:bottom="5dp" android:right="15dp" android:top="5dp" />

            <stroke android:width="1dip" android:color="@color/blue_rem" />

            <solid android:color="#ffffff" />
        </shape></item>

</selector>