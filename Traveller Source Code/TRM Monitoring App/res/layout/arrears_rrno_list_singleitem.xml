<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearlayout01"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:layout_margin="15dp"
    android:weightSum="3" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:weightSum="4"
        android:orientation="vertical" >
        
        
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:background="#F6DDCC"
            android:layout_height="40dp"
            android:weightSum="2"
            android:visibility="gone"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_toRightOf="@+id/rowno"
                android:textStyle="bold"
                android:id="@+id/rrnotitle"
                android:textSize="18sp"
                android:layout_height="match_parent"
                android:text="RR No" />

            <TextView
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:text="Tariff" />

            <!-- <TextView
                android:id="@+id/rowno"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:text="1"
                android:background="#ccc"
                android:textColor="@color/Black"
                android:textStyle="bold" /> -->

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:background="@color/detailed_mr_card_row_dark"
            android:layout_height="40dp"
            android:weightSum="3"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/rrnotext"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:textStyle="bold"
                android:gravity="center|left"
                android:textSize="13sp"
                android:paddingLeft="10dp"
                android:textColor="@color/Maroon"
                android:layout_height="match_parent"
                android:text="RR No" />

            <ImageView
                android:id="@+id/mapview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/mapimage" />
			<LinearLayout android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                android:id="@+id/mrcodetxt"
                android:layout_weight="1"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="11sp"
                android:textColor="@color/greenDarkk"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Mr Code" />
			    <TextView
                android:id="@+id/tarifftext"
                android:layout_weight="1"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="9sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Tariff" />
			</LinearLayout>
            

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:background="@color/detailed_mr_card_row_light"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_height="60dp" >
            
            <TextView
                android:id="@+id/rowno"
                android:layout_weight="0.2"
                android:gravity="center"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:background="@color/detailed_mr_card_header_subheading"
                android:textColor="#000"
                android:textStyle="bold"
                android:text="1" />

            <TextView
                android:id="@+id/nametext"
                android:layout_weight="1.3"
                android:gravity="center|left"
                android:textStyle="bold"
                android:textSize="11sp"
                android:padding="10dp"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:text="Name" />

            <TextView
                android:id="@+id/arrearsamounttext"
                android:layout_weight="0.5"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:textColor="@color/Red"
                android:text="100" />

        </LinearLayout>
        
    </LinearLayout>

    <!-- <Button
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:layout_gravity="center"
        android:drawableTop="@drawable/mapico"
        android:text="Show on map"
        android:visibility="gone"
        android:id="@+id/showonmap"
        android:textColor="@color/Black"
        android:background="@drawable/button_rr_no_list"
         /> -->

</LinearLayout>