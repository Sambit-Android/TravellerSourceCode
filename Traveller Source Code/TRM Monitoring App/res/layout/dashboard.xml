<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dashboard_header_footer"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/dashboard_header_footer"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/usernametext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical|left"
                        android:text="@string/USERNAME"
                        android:textStyle="normal"
                        android:paddingLeft="10dp"
                        android:textColor="@color/White"
                        android:textSize="13sp" />
                    
                    <TextView
                        android:id="@+id/sdocode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical|left"
                        android:text="@string/SDOCODE"
                        android:textStyle="normal"
                        android:textColor="@color/White"
                        android:textSize="13sp" />

                    
                </LinearLayout>
                
                <ScrollView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="0dp"
                    
                    android:background="@color/dashboard_inner_color"
                    android:orientation="vertical" >
                    
                    <LinearLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:visibility="gone"
                        android:background="@drawable/ban10"></LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        
                        android:baselineAligned="false"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:id="@+id/linearbillingprogress"
                            android:layout_width="0dp"
                            android:layout_height="150dp"
                            android:layout_weight="1"
                            android:background="@drawable/selector_background"
                            android:clickable="true"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="visible" >

                            <ImageButton
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:background="@drawable/billing_progress_new"
                                android:clickable="false" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Billing Progress"
                                android:textColor="@color/DarkGray"
                                android:layout_marginTop="10dp"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearMrLocator"
                            android:layout_width="0dp"
                            android:layout_height="150dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/selector_background"
                            android:clickable="true"
                            android:gravity="center"
                            android:orientation="vertical" >

                            <ImageButton
                                android:layout_width="100dp"
                                android:layout_height="75dp"
                                android:background="@drawable/mapimage"
                                android:clickable="false" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_marginTop="10dp"
                                android:text="MR Locator"
                                android:textColor="@color/DarkGray"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearSmsRegister"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/selector_background"
                            android:clickable="true"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="gone" >

                            <ImageButton
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:clickable="false" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_marginTop="10dp"
                                android:textColor="@color/DarkGray"
                                android:textSize="11sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:baselineAligned="false"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:id="@+id/linearArrears"
                            android:layout_width="0dp"
                            android:layout_height="150dp"
                            android:layout_weight="1"
                            android:background="@drawable/selector_background"
                            android:clickable="true"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="visible" >

                            <ImageButton
                                android:layout_width="85dp"
                                android:layout_height="75dp"
                                android:background="@drawable/ruppealt"
                                android:clickable="false" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_marginTop="10dp"
                                android:text="Arrears"
                                android:textColor="@color/DarkGray"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearPerformance"
                            android:layout_width="0dp"
                            android:layout_height="150dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/selector_background"
                            android:clickable="true"
                            android:gravity="center"
                            android:orientation="vertical" >

                            <ImageButton
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:background="@drawable/mr_perform"
                                android:clickable="false" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="MR Performance"
                                android:layout_marginTop="10dp"
                                android:textColor="@color/DarkGray"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearEstimation"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/selector_background"
                            android:clickable="true"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="gone" >

                            <ImageButton
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:clickable="false" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textColor="@color/DarkGray"
                                android:textSize="11sp" />
                        </LinearLayout>
                    </LinearLayout>
                    
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:baselineAligned="false"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:id="@+id/consumerview"
                            android:layout_width="0dp"
                            android:layout_height="150dp"
                            android:layout_weight="1"
                            android:background="@drawable/selector_background"
                            android:clickable="true"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="visible" >

                            <ImageButton
                                android:layout_width="85dp"
                                android:layout_height="75dp"
                                android:background="@drawable/consumerico"
                                android:clickable="false" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_marginTop="10dp"
                                android:text="Consumer History"
                                android:textColor="@color/DarkGray"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/sbmstatus"
                            android:layout_width="0dp"
                            android:layout_height="150dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/selector_background"
                            android:clickable="true"
                            android:gravity="center"
                            android:orientation="vertical" >

                            <ImageButton
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:background="@drawable/devicestatusico"
                                android:clickable="false" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Device Status"
                                android:layout_marginTop="10dp"
                                android:textColor="@color/DarkGray"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/selector_background"
                            android:clickable="true"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="gone" >

                            <ImageButton
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:clickable="false" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textColor="@color/DarkGray"
                                android:textSize="11sp" />
                        </LinearLayout>
                    </LinearLayout>
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:baselineAligned="false"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:id="@+id/message"
                            android:layout_width="0dp"
                            android:layout_height="150dp"
                            android:layout_weight="1"
                            android:background="@drawable/selector_background"
                            android:clickable="true"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="visible" >

                            <ImageButton
                                android:layout_width="85dp"
                                android:layout_height="75dp"
                                android:background="@drawable/messageico"
                                android:clickable="false" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_marginTop="10dp"
                                android:text="Messaging"
                                android:textColor="@color/DarkGray"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ticket"
                            android:layout_width="0dp"
                            android:layout_height="150dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/selector_background"
                            android:clickable="true"
                            android:gravity="center"
                            android:orientation="vertical" >

                            <ImageButton
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:background="@drawable/ticketico"
                                android:clickable="false" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Ticketing Status"
                                android:layout_marginTop="10dp"
                                android:textColor="@color/DarkGray"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/selector_background"
                            android:clickable="true"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="gone" >

                            <ImageButton
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:clickable="false" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textColor="@color/DarkGray"
                                android:textSize="11sp" />
                        </LinearLayout>
                    </LinearLayout>

                    
                    <LinearLayout
        android:id="@+id/linearBackImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical" >

        <!--
                 <ImageView
                android:id="@+id/imgBcits"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_gravity="right"
                android:clickable="true"
                android:src="@drawable/bcits_powered" />
        -->
    </LinearLayout>

    <TextView
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="0dp"
        android:background="@color/dashboard_header_footer"
        android:gravity="center|center_vertical"
        android:text="CESC © 2016\nPowered By BCITS Pvt Ltd"
        android:textColor="@color/WhiteSmoke"
        android:textSize="10sp"
        android:textStyle="normal" />

                </LinearLayout>
                
                
                </ScrollView>
            </LinearLayout>

            <ImageView
                android:id="@+id/imgLogout"
                android:layout_width="41dp"
                android:layout_height="41dp"
                android:clickable="true"
                android:padding="3dp"
                android:src="@drawable/logout"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearOops"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:background="@drawable/bg_form_rounded"
            android:baselineAligned="false"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="BUTTON 1"
                android:textColor="@color/Red"
                android:textSize="32sp"
                android:textStyle="italic|bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>

    

</LinearLayout>