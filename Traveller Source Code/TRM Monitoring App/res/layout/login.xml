<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/electricpoles"
    android:gravity="center"
    android:orientation="vertical" >
    

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_weight="1"
        android:scrollbarSize="0dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:gravity="center"
             android:orientation="vertical" >
            
            <TextView
                android:id="@+id/appName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/app_name"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="sans" />
            
            <ImageView
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_marginBottom="-38dp"
                android:background="@drawable/logo2"
                android:clickable="true"
                android:src="@drawable/cesc" />
           

            <LinearLayout
                android:id="@+id/linearLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="23dp"
                android:layout_marginRight="23dp"
                android:background="@drawable/glass"
                android:gravity="center"
                android:layout_marginBottom="25dp"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="41dp"
                        android:layout_height="41dp"
                        android:clickable="true"
                        android:src="@drawable/login"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/SignIn"
                        android:textColor="@color/DarkGray"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:typeface="sans" />

                    <TextView
                        android:id="@+id/version_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="@string/Version"
                        android:textColor="@color/Black"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:typeface="sans" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:visibility="gone"
                    android:orientation="horizontal" >

                    <Spinner
                        android:id="@+id/spinnerLogin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:popupBackground="@android:color/white" />

                    <ImageView
                        android:layout_width="41dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-41dp"
                        android:padding="5dp"
                        android:src="@drawable/ic_arrow_drop_down_black_18dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <AutoCompleteTextView
                        android:id="@+id/sdo"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:background="@android:drawable/screen_background_light_transparent"
                        android:enabled="true"
                        android:hint="Enter Location"
                        android:paddingLeft="10dp"
                        android:textColor="@color/Black"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:typeface="monospace" />

                    <ProgressBar
                        android:id="@+id/progressBar1"
                        android:layout_width="41dp"
                        android:layout_height="41dp"
                        android:layout_marginLeft="-45dp"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/imgLoadLocation"
                        android:layout_width="41dp"
                        android:layout_height="41dp"
                        android:layout_marginLeft="-41dp"
                        android:background="@android:drawable/list_selector_background"
                        android:clickable="true"
                        android:src="@drawable/ic_refresh_18pt_3x" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <EditText
                        android:id="@+id/username"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@android:drawable/screen_background_light_transparent"
                        android:hint="@string/mrcode"
                        android:inputType="text|textNoSuggestions"
                        android:maxLength="20"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:textColor="@color/Black"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:typeface="monospace" />

                    <ImageView
                        android:layout_width="41dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="-41dp"
                        android:padding="10dp"
                        android:src="@drawable/ic_person_black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <EditText
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@android:drawable/screen_background_light_transparent"
                        android:hint="@string/password"
                        android:inputType="textPassword|none"
                        android:maxLength="20"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:textColor="@color/Black"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                    

                    <ImageView
                        android:layout_width="41dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="-41dp"
                        android:padding="12dp"
                        android:src="@drawable/ic_vpn_key" />
                </LinearLayout>
                
                <CheckBox
                    android:id="@+id/checkBox1"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:checked="false"
                    android:clickable="true"
                    android:text="   Remember Me"
                    android:button="@drawable/checkboxselector"
                    android:textColor="@color/White"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnlogin"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_main"
                    android:gravity="center"
                    android:text="@string/Login"
                    android:textColor="@color/White"
                    android:textSize="18sp"
                    android:textStyle="normal"
                    android:typeface="sans" />
            </LinearLayout>
            
        </LinearLayout>
    </ScrollView>

</LinearLayout>