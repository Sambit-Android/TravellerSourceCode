<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0sp"
    android:background="@color/WhiteGhost"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/detailed_mr_card_header"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="5dp" >

        <TextView
            android:id="@+id/todaysdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Date - 04/08/2016 HH:mm:ss"
            android:textColor="@color/White"
            android:textSize="15dp" />

        <Button
            android:id="@+id/rrnumbers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/roundshape_button"
            android:padding="10dp"
            android:text="RR Wise Collection"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <TextView
                android:id="@+id/mrcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="MR CODE - MR 01"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/White" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <TextView
                android:id="@+id/mrname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:text="Sambit Kumar Dash"
                android:textColor="@color/White"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <TextView
                android:id="@+id/mrmobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="phone"
                android:gravity="center"
                android:paddingTop="5dp"
                android:text="7683490520"
                android:drawableLeft="@drawable/p3"
                android:textColor="#fff"
               	android:padding="10dp"
               	android:drawablePadding="5dp"
                android:textColorLink="@color/White"
                android:textSize="16sp" />
            
            <ImageView android:layout_width="wrap_content"
                android:id="@+id/taketomessages"
                android:layout_height="wrap_content"
                android:src="@drawable/m3"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/title2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/detailed_mr_card_header_heading"
            android:gravity="center"
            android:padding="10dp"
            android:paddingBottom="10dp"
            android:text="Total - 100"
            android:textColor="@color/Black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/billingpercentage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/detailed_mr_card_header_subheading"
            android:gravity="center"
            android:padding="10dp"
            android:paddingBottom="10dp"
            android:text="Billing %"
            android:textColor="@color/Black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >
            
            

            <Button
                android:id="@+id/Button01"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="@color/detailed_mr_card_row_dark"
                android:text="Billed\n2"
                android:textColor="@color/Black"
                android:textSize="15sp" />

            <Button
                android:id="@+id/Button02"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="@color/detailed_mr_card_row_light"
                android:text="Unbilled\n98"
                android:textColor="@color/Black"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/detailed_mr_card_header_heading"
            android:gravity="center"
            android:padding="10dp"
            android:paddingBottom="10dp"
            android:text="Total for today - 20"
            android:textColor="@color/Black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/billingpercentageday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/detailed_mr_card_header_subheading"
            android:gravity="center"
            android:padding="10dp"
            android:paddingBottom="10dp"
            android:text="Billing %"
            android:textColor="@color/Black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/Button04"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="@color/detailed_mr_card_row_dark"
                android:text="BILLED\n1"
                android:textColor="@color/Black"
                android:textSize="15sp" />

            <Button
                android:id="@+id/Button03"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="@color/detailed_mr_card_row_light"
                android:text="UNBILLED\n19"
                android:textColor="@color/Black"
                android:textSize="15sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/detailed_mr_card_header"
            android:textColor="@color/Black" />
    </LinearLayout>

</LinearLayout>