<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/White"
        android:orientation="vertical" >

        <!-- Header -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/detailed_mr_card_header"
            android:gravity="center"
            android:text="MR Wise Billing Progress"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/White"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/todaysdatesummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/detailed_mr_card_header"
            android:gravity="center"
            android:text="As On"
            android:textColor="@color/White"
            android:textSize="15dp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/White" />

        <LinearLayout
            android:id="@+id/linearlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/detailed_mr_card_header"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="5.4" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/rowno"
                android:layout_weight="1.1"
                android:gravity="center"
                android:text="MR Code"
                android:textColor="@color/White"
                android:textSize="11sp"
                android:textStyle="bold" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/White" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1.1"
                android:gravity="center"
                android:text="Name"
                android:textColor="@color/White"
                android:textSize="11sp"
                android:textStyle="bold" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/White" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/rowno"
                android:layout_weight="1.1"
                android:gravity="center"
                android:text="Mobile"
                android:textColor="@color/White"
                android:textSize="11sp"
                android:textStyle="bold" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/White" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1.05"
                android:gravity="center"
                android:text="Target/Billed"
                android:textColor="@color/White"
                android:textSize="11sp"
                android:textStyle="bold" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/White" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1.05"
                android:gravity="center"
                android:text="Percentage(%)"
                android:textColor="@color/White"
                android:textSize="11sp"
                android:textStyle="bold" />
        </LinearLayout>

        <ListView
            android:id="@+id/allcashshow"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/dashboard_inner_color"
            android:cacheColorHint="#00000000"
            android:scrollbars="none" >
        </ListView>
    </LinearLayout>

</LinearLayout>