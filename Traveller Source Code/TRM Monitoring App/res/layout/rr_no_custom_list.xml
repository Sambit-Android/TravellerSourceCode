
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/detailed_mr_card_header"
            android:orientation="vertical"
            android:gravity="center" >
            
        <TextView
            android:id="@+id/todaysdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Date - 04/08/2016 HH:mm:ss"
            android:textColor="@color/White"
            android:textSize="15dp" />

            <TextView
                android:id="@+id/mrcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="MR CODE - MR 01"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/White" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/detailed_mr_card_header"
            android:gravity="center" >

            <TextView
                android:id="@+id/mrname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:text="Sambit Kumar Dash"
                android:textColor="@color/White"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/detailed_mr_card_header"
            android:gravity="center" >

            <TextView
                android:id="@+id/mrmobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="phone"
                android:gravity="center"
                android:paddingTop="5dp"
                android:text="7683490520"
                android:drawableLeft="@drawable/p3"
                android:textColor="#fff"
               	android:padding="10dp"
               	android:drawablePadding="5dp"
                android:textColorLink="@color/White"
                android:textSize="16sp" />
            
            <ImageView android:layout_width="wrap_content"
                android:id="@+id/taketomessages"
                android:layout_height="wrap_content"
                android:src="@drawable/m3"/>
        </LinearLayout>
    
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Please Select RR Number"
        android:layout_marginTop="0dp"
        android:id="@+id/header"
        android:layout_marginBottom="0dp"
        android:textColor="@color/White"
        android:gravity="center"
        android:textSize="15sp"
        android:background="@color/detailed_mr_card_header"
        android:textStyle="bold"
        />
 
         <ListView
              android:id="@+id/list"
              android:layout_height="wrap_content"
              android:textColor="#000"
              android:layout_width="match_parent"
              android:divider="#34495E"
    		android:dividerHeight="1px">
         </ListView>
 
</LinearLayout>
