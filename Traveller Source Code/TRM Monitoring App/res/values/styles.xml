     <style name="CustomFontStyle">
      <item name="android:layout_width">fill_parent</item>
      <item name="android:layout_height">wrap_content</item>
      <item name="android:capitalize">characters</item>
      <item name="android:typeface">monospace</item>
      <item name="android:textSize">12pt</item>
      <item name="android:textColor">#080000</item>/> 
   </style>
   
      <style name="MyTheme" parent="android:Theme.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/Black</item>
        <item name="android:listViewStyle">@style/MyListView</item>
    </style>

    <style name="MyListView" parent="@android:style/Widget.ListView">
        <item name="android:listSelector">@android:drawable/ic_menu_save</item>
    </style>
    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">

  </style>

  <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">

  </style>
  
  <style name="SpinnerDropDownItem">
        <item name="android:gravity">center|left</item>
        <item name="android:typeface">serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:dropDownWidth">100dp</item>
        <item name="android:height">41dp</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:background">@drawable/my_rectangle</item>
    </style>
    <style name="CustomAlertDialogStyle">
    <item name="android:bottomBright">@color/detailed_mr_card_header_subheading</item>
    <item name="android:bottomDark">@color/detailed_mr_card_header_subheading</item>
    <item name="android:bottomMedium">@color/detailed_mr_card_header_subheading</item>
    <item name="android:centerBright">@color/detailed_mr_card_header_subheading</item>
    <item name="android:centerDark">@color/detailed_mr_card_header_subheading</item>
    <item name="android:centerMedium">@color/detailed_mr_card_header_subheading</item>
    <item name="android:fullBright">@color/detailed_mr_card_header_subheading</item>
    <item name="android:fullDark">@color/detailed_mr_card_header_subheading</item>
    <item name="android:topBright">@color/detailed_mr_card_header_subheading</item>
    <item name="android:topDark">@color/detailed_mr_card_header_subheading</item>
</style>
<style name="MyTheme2" parent="@android:style/Theme.Dialog">
    <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
    <item name="android:windowBackground">@color/detailed_mr_card_header</item>
    <item name="android:textColorPrimary">#000000</item>
    <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    <item name="android:windowIsFloating">true</item>
    <item name="android:backgroundDimEnabled">true</item>
    <item name="android:progressDrawable">@drawable/custom_progressbar</item>
    <item name="android:textColor">#000000</item>
    <item name="android:height">100dp</item>
    <item name="android:width">100dp</item>
    <item name="android:fadeEnabled">true</item>
    <item name="android:padding">2dp</item>
    <item name="android:gravity">center</item>
</style>
</resources>
