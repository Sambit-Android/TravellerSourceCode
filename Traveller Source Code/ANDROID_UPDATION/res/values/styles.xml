<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="MyTheme2" parent="@android:style/Theme.Dialog">
    <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
    <item name="android:windowBackground">@color/detailed_mr_card_header</item>
    <item name="android:textColorPrimary">#000000</item>
    <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    <item name="android:windowIsFloating">true</item>
    <item name="android:backgroundDimEnabled">true</item>
    <item name="android:progressDrawable">@drawable/custom_progressbar</item>
    <item name="android:textColor">#000000</item>
    <item name="android:height">100dp</item>
    <item name="android:width">100dp</item>
    <item name="android:fadeEnabled">true</item>
    <item name="android:padding">2dp</item>
    <item name="android:gravity">center</item>
</style>
<style name="CustomAlertDialogStyle">
    <item name="android:bottomBright">@color/detailed_mr_card_header_subheading</item>
    <item name="android:bottomDark">@color/detailed_mr_card_header_subheading</item>
    <item name="android:bottomMedium">@color/detailed_mr_card_header_subheading</item>
    <item name="android:centerBright">@color/detailed_mr_card_header_subheading</item>
    <item name="android:centerDark">@color/detailed_mr_card_header_subheading</item>
    <item name="android:centerMedium">@color/detailed_mr_card_header_subheading</item>
    <item name="android:fullBright">@color/detailed_mr_card_header_subheading</item>
    <item name="android:fullDark">@color/detailed_mr_card_header_subheading</item>
    <item name="android:topBright">@color/detailed_mr_card_header_subheading</item>
    <item name="android:topDark">@color/detailed_mr_card_header_subheading</item>
</style>
</resources>