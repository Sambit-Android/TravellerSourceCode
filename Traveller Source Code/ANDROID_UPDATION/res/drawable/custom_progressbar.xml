<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Define the background properties like color etc -->
    <item android:id="@android:id/background">
    <shape>
        <gradient
                android:startColor="@color/detailed_mr_card_header_heading"
                android:centerColor="@color/detailed_mr_card_row_dark"
                android:centerY="1.0"
                android:endColor="@color/detailed_mr_card_row_light"
                android:angle="270"
        />
    </shape>
   </item>

  <!-- Define the progress properties like start color, end color etc -->
  <item android:id="@android:id/progress">
    <clip>
        <shape>
            <gradient
                android:startColor="@color/detailed_mr_card_header_heading"
                android:centerColor="@color/detailed_mr_card_header_heading"
                android:centerY="1.0"
                android:endColor="@color/detailed_mr_card_row_light"
                android:angle="270"
            />
        </shape>
    </clip>
    </item>
</layer-list> 