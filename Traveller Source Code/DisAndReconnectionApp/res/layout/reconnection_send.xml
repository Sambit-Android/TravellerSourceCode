<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/White" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:padding="2dp" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/border_light_gray"
                android:gravity="center"
                android:text="Enter Reconnction Details"
                android:textColor="@color/DarkGray"
                android:textStyle="bold" />

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/White" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="41dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="2"
                    android:background="@color/WhiteSmoke"
                    android:gravity="center|left"
                    android:paddingLeft="5dp"
                    android:text="Account No."
                    android:textColor="@color/DarkGray"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/txtAccount"
                    android:layout_width="0dp"
                    android:layout_height="41dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1.8"
                    android:background="@color/WhiteSmoke"
                    android:gravity="left|center"
                    android:paddingLeft="5dp"
                    android:text="ABC123"
                    android:textColor="@color/DarkGray"
                    android:textStyle="bold"
                    android:typeface="serif" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/White"
                android:visibility="gone" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="41dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="2"
                    android:background="@color/WhiteSmoke"
                    android:gravity="center|left"
                    android:paddingLeft="5dp"
                    android:text="Current reading"
                    android:textColor="@color/DarkGray"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <EditText
                    android:id="@+id/edCurrentReading"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1.8"
                    android:background="@android:drawable/edit_text"
                    android:gravity="center|left"
                    android:inputType="number"
                    android:maxLength="20"
                    android:paddingLeft="5dp"
                    android:textColor="@color/DarkGray"
                    android:typeface="serif" />
            </TableRow>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/border_light_gray"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/imgSetImage"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:background="@android:drawable/ic_menu_camera" />

                <Button  android:textStyle="bold"
                    android:id="@+id/btnCapture"
                    style="@style/btnJvnnlBlue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Capture Meter" />
            </LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_marginTop="2dp"
                android:layout_weight="2"
                android:background="@color/WhiteSmoke"
                android:gravity="center|left"
                android:paddingLeft="5dp"
                android:text="Remarks"
                android:textColor="@color/DarkGray"
                android:textStyle="bold"
                android:typeface="serif" />

            <EditText
                android:id="@+id/edRemarks"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_weight="1.8"
                android:background="@android:drawable/editbox_background"
                android:digits="0123456789QWERTYUIOPASDFGHJKLZXCVBNMqwertyuiopasdfghjklzxcvbnm_ -.,"
                android:inputType="textCapSentences|textMultiLine"
                android:maxLength="60"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:singleLine="false"
                android:textColor="@color/DarkGray"
                android:typeface="serif" />
        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/border_light_gray"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:clickable="true"
                android:padding="5dp"
                android:src="@drawable/disconnect_three" />

            <Button  android:textStyle="bold"
                android:id="@+id/btnDisconnect"
                style="@style/btnJvnnlBlue"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_gravity="right|center"
                android:layout_weight="1"
                android:text="Reconnect " >
            </Button>
        </LinearLayout>
    </LinearLayout>

</ScrollView>