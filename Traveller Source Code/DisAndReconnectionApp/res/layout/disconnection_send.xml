<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/White" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:padding="2dp" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/border_light_gray"
                android:gravity="center"
                android:text="Enter Disconnction Details"
                android:textColor="@color/DarkGray"
                android:textStyle="bold" />

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/White" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="41dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="2"
                    android:background="@color/WhiteSmoke"
                    android:gravity="center|left"
                    android:paddingLeft="5dp"
                    android:text="Account No."
                    android:textColor="@color/DarkGray"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/txtAccount"
                    android:layout_width="0dp"
                    android:layout_height="41dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1.8"
                    android:background="@color/WhiteSmoke"
                    android:gravity="left|center"
                    android:paddingLeft="5dp"
                    android:text="ABC123"
                    android:textColor="@color/DarkGray"
                    android:textStyle="bold"
                    android:typeface="serif" />
            </TableRow>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="5dp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:gravity="center|left"
                    android:text="No Disconnection"
                    android:textColor="@color/Red"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <CheckBox
                    android:id="@+id/checkDisconnected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:clickable="true"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="0dp"
                    android:paddingTop="10dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_margin="2dp"
                android:background="@color/Gray" />

            <TextView
                android:id="@+id/txtPresentStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginTop="2dp"
                android:layout_weight="2"
                android:background="@color/WhiteSmoke"
                android:gravity="center|left"
                android:paddingLeft="5dp"
                android:text="Choose Reason"
                android:textColor="@color/DarkGray"
                android:textStyle="bold"
                android:typeface="serif" />

            <Spinner
                android:id="@+id/spinnerPresentStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:drawable/btn_dropdown"
                android:paddingRight="41dp" />

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/White" >

                <TextView
                    android:id="@+id/txtCurrentReading"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="2"
                    android:background="@color/WhiteSmoke"
                    android:gravity="center|left"
                    android:paddingLeft="5dp"
                    android:text="Current reading"
                    android:textColor="@color/DarkGray"
                    android:textStyle="bold"
                    android:typeface="serif" />
            </TableRow>

            <EditText
                android:id="@+id/edCurrentReading"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_weight="1.8"
                android:background="@android:drawable/editbox_background"
                android:gravity="center|left"
                android:inputType="number"
                android:maxLength="9"
                android:paddingBottom="10dp"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:textColor="@color/DarkGray"
                android:textSize="21sp"
                android:textStyle="bold"
                android:typeface="serif" />

            <LinearLayout
                android:id="@+id/linearImage"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/border_light_gray"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/imgSetImage"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:background="@android:drawable/ic_menu_camera" />

                <Button android:textStyle="bold"
                    android:id="@+id/btnCapture"
                    style="@style/btnJvnnlBlue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Capture Meter" />
            </LinearLayout>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/White" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="2"
                    android:background="@color/WhiteSmoke"
                    android:gravity="center|left"
                    android:paddingLeft="5dp"
                    android:text="Remarks"
                    android:textColor="@color/DarkGray"
                    android:textStyle="bold"
                    android:typeface="serif" />
            </TableRow>

            <EditText
                android:id="@+id/edRemarks"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_weight="1.8"
                android:background="@android:drawable/editbox_background"
                android:digits="0123456789QWERTYUIOPASDFGHJKLZXCVBNMqwertyuiopasdfghjklzxcvbnm_ -.,"
                android:inputType="textCapSentences|textMultiLine"
                android:maxLength="100"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:singleLine="false"
                android:textColor="@color/DarkGray"
                android:textStyle="bold"
                android:typeface="serif" />
        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/border_light_gray"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:clickable="true"
                android:padding="5dp"
                android:src="@drawable/disconnect_three" />

            <Button android:textStyle="bold"
                android:id="@+id/btnDisconnect"
                style="@style/btnJvnnlBlue"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_gravity="right|center"
                android:layout_weight="1"
                android:text="Print Disconnection Notice" >
            </Button>
        </LinearLayout>
    </LinearLayout>

</ScrollView>