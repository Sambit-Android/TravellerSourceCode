<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="@color/White"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:text=" Connection Status"
            android:textColor="@color/DarkGray"
            android:textStyle="bold"
            android:typeface="serif" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue_dark"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="2dp" >

            <TextView
                android:id="@+id/txtMrCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="MR01"
                android:textColor="@color/White"
                android:textSize="14sp"
                android:textStyle="bold|"
                android:typeface="sans"
                android:visibility="gone" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txtSdoCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="1234"
                android:textColor="@color/White"
                android:textSize="14sp"
                android:textStyle="bold"
                android:typeface="sans" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:gravity="center_vertical"
                android:text="LIST NO : "
                android:textColor="@color/blueDim"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtListNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="100"
                android:textColor="@color/White"
                android:textSize="14sp"
                android:textStyle="bold"
                android:typeface="sans" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearDashboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-3dp"
            android:background="@drawable/border_light_gray"
            android:orientation="vertical"
            android:stretchColumns="0" >

            <LinearLayout
                android:id="@+id/LinearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Connections"
                    android:textColor="@color/androidBlue3"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="32dp"
                    android:background="@color/LightGrey"
                    android:visibility="invisible" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="32dp"
                    android:background="@color/LightGrey" />

                <TextView
                    android:id="@+id/txtTotalConnection"
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/Black"
                    android:textSize="23sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/border"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="To Disconnect"
                    android:textColor="@color/androidBlue3"
                    android:textSize="14sp"
                    android:typeface="serif" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="32dp"
                    android:background="@color/LightGrey" />

                <TextView
                    android:id="@+id/txtNotDisconnected"
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/blue_dark"
                    android:textSize="21sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-3dp"
                android:background="@drawable/border"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Disconnected"
                    android:textColor="@color/androidBlue3"
                    android:textSize="14sp"
                    android:typeface="serif" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="32dp"
                    android:background="@color/LightGrey" />

                <TextView
                    android:id="@+id/txtDisconnected"
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/DarkGray"
                    android:textSize="21sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-3dp"
                android:background="@drawable/border"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Not Disconnected"
                    android:textColor="@color/androidBlue3"
                    android:textSize="14sp"
                    android:typeface="serif" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="32dp"
                    android:background="@color/LightGrey" />

                <TextView
                    android:id="@+id/txtFailDisconnection"
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/Red"
                    android:textSize="21sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/border"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="To Reconnect"
                    android:textColor="@color/androidBlue3"
                    android:textSize="14sp"
                    android:typeface="serif" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="32dp"
                    android:background="@color/LightGrey" />

                <TextView
                    android:id="@+id/txtToReconnect"
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/blue_dark"
                    android:textSize="21sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-3dp"
                android:background="@drawable/border"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reconnected"
                    android:textColor="@color/androidBlue3"
                    android:textSize="14sp"
                    android:typeface="serif" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="32dp"
                    android:background="@color/LightGrey" />

                <TextView
                    android:id="@+id/txtReconnected"
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/DarkGray"
                    android:textSize="21sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/border"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sync Status"
                    android:textColor="@color/androidBlue3"
                    android:textSize="14sp"
                    android:typeface="serif" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/btnUpload"
                    android:layout_width="wrap_content"
                    android:layout_height="41dp"
                    android:background="@drawable/button_main_login"
                    android:drawableRight="@android:drawable/stat_sys_upload_done"
                    android:gravity="center"
                    android:paddingLeft="9dp"
                    android:paddingRight="5dp"
                    android:text="Upload"
                    android:textColor="@color/White"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="32dp"
                    android:background="@color/LightGrey" />

                <TextView
                    android:id="@+id/txtSyncStatus"
                    android:layout_width="95dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/Black"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="5dp" >

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/btnViewReport"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_gravity="right"
                    android:background="@android:drawable/list_selector_background"
                    android:gravity="center_vertical"
                    android:paddingRight="5dp"
                    android:text="View Report"
                    android:textColor="@color/blue_dark"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:typeface="serif" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearHead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp"
            android:background="@drawable/border_light_gray"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btnDisconnect"
                android:layout_width="0dp"
                android:layout_height="41dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/border_red"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:text="Disconnect"
                android:textColor="@color/White"
                android:textSize="14sp"
                android:textStyle="bold"
                android:typeface="serif" />

            <Button
                android:id="@+id/btnReconnect"
                android:layout_width="0dp"
                android:layout_height="41dp"
                android:layout_weight="1"
                android:background="@drawable/border_green"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:text="Reconnect"
                android:textColor="@color/White"
                android:textSize="14sp"
                android:textStyle="bold"
                android:typeface="serif" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/border_light_gray"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|right"
                android:padding="2dp" >

                <Button
                    android:id="@+id/btnDownload"
                    android:layout_width="0dp"
                    android:layout_height="41dp"
                    android:layout_marginRight="-36dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_main"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="Download List"
                    android:textColor="@color/White"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:paddingRight="5dp"
                    android:src="@android:drawable/stat_sys_download_done" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearReloadlist"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|right"
                android:padding="2dp"
                android:visibility="gone" >

                <Button
                    android:id="@+id/btnRefresh"
                    android:layout_width="0dp"
                    android:layout_height="41dp"
                    android:layout_marginRight="-36dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_main"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="Reload List"
                    android:textColor="@color/White"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:clickable="false"
                    android:paddingRight="5dp"
                    android:src="@drawable/ic_action_refresh" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>