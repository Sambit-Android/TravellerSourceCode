<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <corners android:radius="10dip" />

            <solid android:color="@color/White" />

            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />

            <stroke
                android:width="2dip"
                android:color="@color/Gray" />

            <gradient
                android:angle="0"
                android:centerColor="#499DF5"
                android:endColor="#499DF5"
                android:startColor="#499DF5" />
        </shape>
    </item>

</layer-list>
