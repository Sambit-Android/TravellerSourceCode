<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
     android:background="@color/grey"
    android:scrollbars="none" >
    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
        </LinearLayout>

        

       

                
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="3dp"
             android:gravity="center|right"
             android:orientation="horizontal" >
             
             
              <ImageView
                         android:id="@+id/previousscreen"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_action_previous_item"
                        android:visibility="visible" />

             <Button
                 android:id="@+id/nextp"
                 style="@style/btnJvnnlBlue"
                 android:layout_width="100dp"
                 android:layout_height="50dp"
                 android:layout_gravity="right|center_vertical"
                 android:layout_marginLeft="10dp"
                 android:layout_weight="1.01"
                 android:background="@drawable/button_make_pay_jvnnlgreen"
                 android:text="LAST MONTH BILL"
                 android:textSize="19sp" >
             </Button>
         </LinearLayout>

        
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:background="@color/Gray"
            android:padding="3dp"
            android:stretchColumns="0" >

            
          
            
            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:gravity="center" >

              <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="  ELECTRICITY BILL : "
                    android:textColor="@color/androidBlue3"
                    android:textStyle="bold" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="32dp"
                    android:background="@color/Gray"
                    android:visibility="gone" />

                <TextView
                    android:visibility="invisible"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="  DC Status  "
                    android:textColor="@color/androidBlue3"
                    android:textStyle="bold" />
            </TableRow>

            
              <TableRow
                
                android:id="@+id/tableRow5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/textView4"
                      android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Consumer Type"
                    android:textColor="@color/androidBlue3"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="32dp"
                    android:background="@color/Gray" />

                <TextView
                    android:id="@+id/tvrrno"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="LT"
                    android:textColor="@color/Red"
                    android:textStyle="bold" 
                    android:textSize="17sp"
                    />
            </TableRow>
            
            
            
            
            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:gravity="center_vertical" >

                <TextView
                     android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/textView1"
                    android:layout_height="wrap_content"
                    android:text="Consumer No."
                    android:textColor="@color/androidBlue3"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="32dp"
                    android:background="@color/Gray" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/tvname"
                    
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="16001"
                    android:textColor="@color/Black"
                    android:textStyle="bold"
                    android:textSize="17sp"
                     />
            </TableRow>

            
  <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/textView2"
                      android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Billing Unit"
                    android:textColor="@color/androidBlue3"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="32dp"
                    android:background="@color/Gray" />

                <TextView
                    android:id="@+id/tvaddress"
